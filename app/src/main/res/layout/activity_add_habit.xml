<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_habit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.closedbracket.trackit.AddHabit">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient1">

        <TextView
            android:id="@+id/new_habit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-condensed"
            android:padding="5dp"
            android:text="New Habit"
            android:textAllCaps="true"
            android:textColor="@color/accent_material_dark_1"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/new_habit"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="NAME"
                    android:textAlignment="viewStart"
                    android:textColor="@color/accent_material_dark_1"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/habitName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:allowUndo="true"
                    android:autoText="true"
                    android:ems="10"
                    android:hint="Read, Exercise .."
                    android:inputType="textPersonName"
                    android:textAllCaps="false"
                    android:textColor="@color/accent_material_dark_1"
                    android:textColorHint="@color/text_hint"
                    android:textColorLink="@android:color/background_light"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="repeatClick"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/repeat_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.91"
                    android:padding="10dp"
                    android:text="REPEAT"
                    android:textAlignment="viewStart"
                    android:textColor="@color/accent_material_dark_1"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/repeat_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.52"
                    android:clickable="true"
                    android:ems="10"
                    android:inputType="none|textPersonName"
                    android:onClick="repeatClick"
                    android:text="Daily"
                    android:textAlignment="textStart"
                    android:textColor="@color/text_hint"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/reminder_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="REMINDERS"
                    android:textAlignment="viewStart"
                    android:textColor="@color/accent_material_dark_1"
                    android:textSize="20sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:switchMinWidth="80dp" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
