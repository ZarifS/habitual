<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/gradient1"
        android:backgroundTint="#05ffffff"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/habitlist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="habit"
            android:textAllCaps="true"
            android:textColor="@color/accent_material_dark_1"
            android:textSize="18sp" />

        <Button
            android:id="@+id/habitlist_tracker"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/accent"
            android:text="7"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/habitlist_checked"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/green"
            app:srcCompat="@drawable/checkmark" />

    </LinearLayout>

</RelativeLayout>
